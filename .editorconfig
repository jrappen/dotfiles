root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.bat]
charset = latin1
end_of_line = crlf

[*.{css,sass,scss}]
indent_size = 2

[*.{html,xml}]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.php]
indent_size = 4

[*.ps]
end_of_line = crlf

[*.py]
indent_size = 4

[*.{sh,zsh,bash}]
indent_size = 4

[*.{yml,yaml,toml}]
indent_size = 2

[Makefile]
indent_style = tab
